{% trans_default_domain 'FOSUserBundle' %}

<div class="col-md-4 col-md-offset-4">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <h2 class="form-signin-heading">{{ 'security.login.authenticate_you'|trans({}, 'messages') }}</h2>
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <input type="email" id="username" name="_username" value="{{ last_username }}" class="form-control"  placeholder="{{ 'security.login.username'|trans }}" required autofocus />
        <br>
        <input type="password" id="password" name="_password" placeholder="{{ 'security.login.password'|trans }}" class="form-control"  required />
        <div class="checkbox">
            <label>
                <input type="checkbox"id="remember_me" name="_remember_me" value="on" value="remember-me"> {{ 'security.login.remember_me'|trans }}
            </label>
        </div>
        <button type="submit" id="_submit" name="_submit" class="btn btn-lg btn-primary btn-block" >{{ 'security.login.submit'|trans }}</button>
        {% if error %}
            <div class="text-danger" style="padding: 10px">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </form>
</div>