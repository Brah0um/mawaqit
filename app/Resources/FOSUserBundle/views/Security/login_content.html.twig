{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    {% stylesheets 
            "@AppBundle/Resources/public/css/login.css"
            filter="cssrewrite"
    %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}
{% endblock %}

<div class="col-md-4 col-md-offset-4">
    <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
        <h2 class="form-signin-heading">Identifiez-vous !</h2>
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <input type="email" id="username" name="_username" value="{{ last_username }}" class="form-control"  placeholder="Email" required autofocus />
        <br>
        <input type="password" id="password" name="_password" placeholder="Mot de pass" class="form-control"  required />
        <div class="checkbox">
            <label>
                <input type="checkbox"id="remember_me" name="_remember_me" value="on" value="remember-me"> Se souvenir de moi
            </label>
        </div>
        <button type="submit" id="_submit" name="_submit" class="btn btn-lg btn-primary btn-block" >S'identifier</button>
        {% if error %}
            <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </form>
</div>