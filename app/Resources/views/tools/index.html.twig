{% extends 'base.html.twig' %}

{% block title %} {{ 'Administration' ~ ' - ' ~parent() }}{% endblock %}

{% block body %}
    <h1>Outils d'administration</h1>

    {% include 'partial/flash_msg.html.twig' %}

    <div class="row">
        <div class="col-md-4 mt-3">
            <p>Forcer le rechargement de l'écran de toutes les mosquées et domiciles</p>
            <a href="{{ path('mosque_force_update_all') }}" class="btn btn-primary">{{ 'mosque.force_update_all.action'|trans }}</a>
        </div>
        <div class="col-md-4 mt-3">
            <p>Ajuster la date hégirienne de toutes les mosquées et domiciles</p>
            {{ form_start(hijriForm, {action: path('update_hijri_date'), attr: { class : "navbar-form navbar-left"}}) }}
                {{ form_widget(hijriForm.hijriAdjustment) }}
                {{ form_widget(hijriForm.save) }}
            {{ form_end(hijriForm) }}
        </div>
    </div>
{% endblock %}