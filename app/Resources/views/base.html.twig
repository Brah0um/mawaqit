    <body>

        {% include ("partial/navbar.html.twig") %}

        {% if app.user %}
            {% include ("partial/sidebar.html.twig") %}
        {% endif %}

        <div class="col-md-10 col-md-offset-1">
        {% block body %}{% endblock %}
    </div>

    {% javascripts
                '@AppBundle/Resources/public/jquery/js/jquery-1.12.4.min.js'
                '@AppBundle/Resources/public/bootstrap-3.3.7/js/bootstrap.min.js'
                '@AppBundle/Resources/public/js/main.js'
                '@AppBundle/Resources/public/js/sidebar.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}    

    {% block javascripts %}
    {% endblock %}

