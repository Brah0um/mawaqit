{% extends 'bootstrap_3_layout.html.twig' %}

{% block form_label %}
    {{ parent() }}

    {% if required %}
        <span style="color: red" title="{{'required'|trans}}">*</span>
    {% endif %}

    {% if attr.title is defined and  attr.title is not empty %}
        <span class="fa fa-question-circle" title="{{attr.title}}"></span>
    {% endif %}
{% endblock %}