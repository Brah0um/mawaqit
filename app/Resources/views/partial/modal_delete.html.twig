<div title="{{'form.delete.action'|trans}}" class="btn btn-danger" data-id="{{ entity.id }}"  data-toggle="modal" data-target="#{{ path ~ entity.id }}">
    <span class="glyphicon glyphicon-trash"></span>
</div>

<!-- Modal validation suppression -->
<div class="modal fade" id="{{ path ~ entity.id }}" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
               {{'delete_element_question'|trans}}
            </div>
            <br>
            <div class="modal-footer">
                <a href="{{path(path, {id: entity.id})}}" class="btn btn-danger" title={{'form.delete.action'|trans}}><span class="glyphicon glyphicon-trash"></span> {{'form.delete.action'|trans}} </a>
                <button type="button" class="btn btn-default" data-dismiss="modal">{{'cancel'|trans}}</button>
            </div>
        </div>
    </div>
</div>
