{% stylesheets 
    "bundles/app/css/navbar.css"
    filter="cssrewrite"
%}
<link rel="stylesheet" href="{{ asset_url }}" type="text/css">
{% endstylesheets %}

<nav id="mainNav" class="navbar navbar-default navbar-custom navbar-fixed-top">
    <div class="col-md-12">
        <div class="navbar-header page-scroll">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand page-scroll hidden-xs" href="{{path('mosque_index')}}">{{'admin_title'|trans}}&nbsp;&nbsp;|</a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                {% if app.user %}
                    <li>
                        <a href="{{path('fos_user_profile_show')}}">{{'salam'|trans({'%name%': app.user.username})}}</a> 
                    </li>
                    <li>
                        <a href="{{path('fos_user_profile_show')}}"><i class="fa fa-user"></i>&nbsp;{{'my_profile'|trans}}</a>
                    </li>
                    <li>
                        <a href="{{path('mosque_index')}}"><i class="fa fa-home"></i>&nbsp;{{'my_mosques'|trans}}</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li>
                            <a href="{{path('user_index')}}"><i class="fa fa-users"></i>&nbsp;{{'users'|trans}}</a>
                        </li>
                    {% endif %}
                    <li>
                        <a href="{{path("fos_user_security_logout")}}"><i class="fa fa-sign-out"></i>&nbsp;{{'layout.logout'|trans({}, 'FOSUserBundle')}}</a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{path("fos_user_registration_register")}}"><i class="fa fa-user"></i>&nbsp;{{'layout.register'|trans({}, 'FOSUserBundle')}}</a>
                    </li>
                    <li>
                        <a href="{{path("fos_user_security_login")}}"><i class="fa fa-sign-out"></i>&nbsp;{{'layout.login'|trans({}, 'FOSUserBundle')}}</a>
                    </li>
                {% endif %}
            </ul>

