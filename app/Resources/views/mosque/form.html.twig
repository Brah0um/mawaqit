{% include 'partial/flash_msg.html.twig' %}

{{ form_errors(form) }}

{{ form_widget(form._token) }}

<div class="row">
    <div class="col-md-12"><p><span style="color: red">*</span> {{ 'required'|trans }}</p></div>
    <div class="col-md-6">
        {% if mosque is defined %}

            {% if isNotLocal() %}
                {{ form_label(form.slug) }}
            {% endif %}

            <div class="input-group form-group">
                <span class="input-group-addon">https:{{ url('homepage', {}, true) }}</span>
                {{ form_widget(form.slug) }}
            </div>

            {% if isNotLocal() %}
                <div class="alert alert-warning mt-1" role="alert">
                    <div>{{ 'mosque.alert.slugChange'|trans }}</div>
                </div>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') %}
                {{ form_row(form.user) }}
                {{ form_row(form.user_complete, {'attr' : isLocal() ? {'disabled': 'disabled'} :  {'data-remote': path('users_search_ajax') } }) }}
            {% endif %}
        {% endif %}

        {{ form_row(form.type) }}

        <div class="form-block hidden">
            {{ form_row(form.name) }}

            <div class="mosque-block">
                {{ form_row(form.associationName) }}
                {{ form_row(form.phone) }}
                {{ form_row(form.email) }}
                {{ form_row(form.site) }}
                {{ form_row(form.address) }}
            </div>

            {{ form_row(form.city) }}
            {{ form_row(form.zipcode) }}
            {{ form_row(form.country) }}

            <div class="mosque-block">
                {{ form_row(form.rib) }}
                {{ form_row(form.addOnMap) }}
            </div>
        </div>
    </div>

    <div class="mosque-block hidden">
        <div class="col-md-3 ">
            {% if mosque is not defined or not mosque.validated %}
                <div class="block-image">
                    {{ form_row(form.file1) }}
                </div>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <div class="block-image">
                    {{ form_row(form.file2) }}
                </div>
                <div class="block-image">
                    {{ form_row(form.file3) }}
                </div>
            {% endif %}
            {% if mosque is not defined or not mosque.validated %}
                <div class="block-image">
                    {{ form_row(form.justificatoryFile) }}
                </div>
            {% endif %}
        </div>
    </div>
</div>

<br>
{{ form_widget(form.save) }}
<a href="{{ path("mosque_index") }}" class="btn btn-warning">{{ 'cancel'|trans({}, 'messages') }}</a>