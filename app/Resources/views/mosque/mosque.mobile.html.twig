<!DOCTYPE html>
<html>
    <head>
        <title>Horaires de pri√®re</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">


        {% stylesheets 
            "bundles/app/bootstrap-3.3.7/css/bootstrap.min.css"
            filter="cssrewrite"
        %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
        {% endstylesheets %}

        <link media="screen and (max-width: 1200px)" href="/bundles/app/prayer-times/css/mobile.css" rel="stylesheet">
        <link rel="icon" href="favicon.ico" />
    </head>
    <body class="text-center">
        <div class="mobile hidden-lg">
            <div class="spinner"></div>

            <div class="main display-none">
                <div class="header">{{header}}</div>
                <div class="top-content">
                    <div class="time"></div>
                    <div class="hijriDate ar"></div>
                    <div class="gregorianDate">{{date}}</div>
                </div>

                <div class="prayer-content">
                    <div class="row">
                        <div class="col-xs-4 text">{{'fajr'|trans}}</div>
                        <div class="col-xs-4 prayer prayer0 sobh"></div> 
                        <div class="col-xs-4 adhan0 hidden">
                            <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}" class="athan-img">
                        </div>
                        <div class="col-xs-4 wait"></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4 text">{{'zuhr'|trans}}</div>
                        <div class="col-xs-4 prayer prayer1 dohr"></div>
                        <div class="col-xs-4 adhan1 hidden">
                            <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}" class="athan-img">
                        </div>
                        <div class="col-xs-4 wait"></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4 text">{{'asr'|trans}}</div>
                        <div class="col-xs-4 prayer prayer2 asr"></div>
                        <div class="col-xs-4 adhan2 hidden">
                            <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}" class="athan-img">
                        </div>
                        <div class="col-xs-4 wait"></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4 text">{{'maghrib'|trans}}</div>
                        <div class="col-xs-4 prayer prayer3 maghrib"></div>
                        <div class="col-xs-4 adhan3 hidden">
                            <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}" class="athan-img">
                        </div>
                        <div class="col-xs-4 wait"></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4 text">{{'isha'|trans}}</div>
                        <div class="col-xs-4 prayer prayer4 ichaa"></div>
                        <div class="col-xs-4 adhan4 hidden">
                            <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}" class="athan-img">
                        </div>
                        <div class="col-xs-4 wait"></div>
                    </div>
                </div>

                <div class="chourouk-joumouaa">
                    <div class="row">
                        <div class="col-xs-4 col-xs-offset-1 imsak custom-time">{{'imsak'|trans}}</div> 
                        <div class="col-xs-4 col-xs-offset-1 chourouk custom-time">{{'shuruk'|trans}}</div> 
                        <div class="col-xs-2"></div>
                        <div class="col-xs-4 joumouaa">{{'jumua'|trans}}</div>
                        <div class="col-xs-1"></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4 col-xs-offset-1 imsak custom-time imsak-id"></div>
                        <div class="col-xs-4 col-xs-offset-1 chourouk custom-time chourouk-id "></div>
                        <div class="col-xs-2"></div>
                        <div class="col-xs-4 prayer joumouaa-id"></div>
                        <div class="col-xs-1"></div>
                    </div>
                </div>

                <div class="footer">
                    <div class="assosciation text-center">{{footer}}</div>
                    <div class="support">
                        <span>{{'support'|trans}}</span> : <br>
                        <i class="glyphicon glyphicon-phone"></i> <a href="tel:{{supportTel}}" class="supportTel">{{supportTel}}</a>&nbsp;
                        <i class="glyphicon glyphicon-envelope"></i> <a href="mailto:{{supportEmail}}" class="supportEmail">{{supportEmail}}</a>
                    </div>
                    <div class="version text-right">v{{version}}</div>

                </div>
            </div>
        </div>

        <script>
            var confData = {{config|raw}};
        </script>

        {% javascripts
                '@AppBundle/Resources/public/jquery/js/jquery-1.12.4.min.js'
                '@AppBundle/Resources/public/bootstrap-3.3.7/js/bootstrap.min.js'
                '@AppBundle/Resources/public/prayer-times/js/vendor/jquery.countdown.min.js'
                '@AppBundle/Resources/public/prayer-times/js/vendor/hijriDate.js'
                '@AppBundle/Resources/public/prayer-times/js/vendor/PrayTimes.js'
                '@AppBundle/Resources/public/prayer-times/js/tools.js'
                '@AppBundle/Resources/public/prayer-times/js/date.js'
                '@AppBundle/Resources/public/prayer-times/js/prayer.js'
        %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}    
    </body>
</html>