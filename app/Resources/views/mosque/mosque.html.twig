<!DOCTYPE html>
<html>
    <head>
        <title>Horaires de pri√®re</title>
        <meta charset="UTF-8">
        <meta name="google" content="notranslate">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <link rel="icon" href="{{asset('favicon.png')}}" />

        {% stylesheets 
            "bundles/app/bootstrap-3.3.7/css/bootstrap.min.css"
            filter="cssrewrite"
        %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
        {% endstylesheets %}

        <link media="screen and (min-width: 1200px)" href="/bundles/app/prayer-times/css/desktop.css" rel="stylesheet">
        <link media="screen and (max-width: 1200px)" href="/bundles/app/prayer-times/css/mobile.css" rel="stylesheet">
        <link media="screen and (min-width: 1200px)" href="/bundles/app/prayer-times/css/slider.css" rel="stylesheet">
    </head>
    <body class="text-center">
        <div class="desktop hidden-xs hidden-sm hidden-md">
            <div class="spinner"></div>

            <!-- Iqama screen -->
            <div class="iqama ar hidden">
                <div class="top">{{'iqama'|trans}}</div>
                <div class="image"></div>
                <div class="bottom">{{'power-off-phones'|trans}}</div>
            </div>

            <!-- Douaa after prayer slider -->
            <div class="douaa-after-prayer display-none">
                {% if mosque.configuration.smallScreen  %}
                    {% include 'partial/dua-slider.html.twig' %}
                {% else %}
                    {% include 'partial/dua-slider-one-screen.html.twig' %}
                {% endif %}
            </div>

            <!-- message info slider -->
            <div class="message-info-slider display-none">
                <div class="slider" style="font-size: 12px">
                    <ul></ul>
                </div>
            </div>

            {% include 'partial/dua-after-adhan.html.twig' %}
            {% include 'partial/dua-between-adhan-and-iqama.html.twig' %}
            {% include 'partial/jumua-dhikr-reminder.html.twig' %}

            <!-- main screen -->
            <div class="main display-none">
                <div class="header ar">{{mosque.name ~ (mosque.city not in mosque.name ?  ' - ' ~ mosque.city : '') }}</div> 

                <div class="top-content">
                    
                    <div class="hadith-of-the-day display-none"></div>
                    
                    <div class="adhan-flash hidden">
                        <div class="col-lg-2">
                            <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}">
                        </div>
                        <div class="col-lg-8 ar">
                            <span>{{'azan'|trans}}</span>
                        </div>
                        <div class="col-lg-2">
                            <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}" style="transform: scaleX(-1);">
                        </div>
                    </div>
                    <div class="content">
                        <div class="col-lg-3 aid custom-time">
                            <div class="ar">{{'aid'|trans}}</div>
                            <div class="aid-id"></div>
                        </div>
                        <div class="col-lg-3 chourouk custom-time">
                            <div class="ar">{{'shuruk'|trans}}</div>
                            <div class="chourouk-id"></div>
                        </div>
                        <div class="col-lg-3 imsak custom-time">
                            <div class="ar">{{'imsak'|trans}}</div>
                            <div class="imsak-id"></div>
                        </div>
                        <div class="col-lg-6">
                            <div class="time"></div>
                            <div class="hijriDate"></div>
                            <div class="gregorianDate"></div>
                        </div>
                        <div class=" col-lg-3 joumouaa {{ mosque.configuration.noJumua ? 'hidden' : '' }}">
                            <div class="ar">{{'jumua'|trans}}</div>
                            <div class="prayer joumouaa-id"></div>
                        </div>
                    </div>
                </div>

                <div class="prayer-content">
                    <div class="prayer-text">
                        <div class="text _0 ar">{{'fajr'|trans}}</div>
                        <div class="text _1 ar">{{'zuhr'|trans}}</div>
                        <div class="text _2 ar">{{'asr'|trans}}</div>
                        <div class="text _3 ar">{{'maghrib'|trans}}</div>
                        <div class="text _4 ar">{{'isha'|trans}}</div>
                    </div>

                    <div class="prayer-time">
                        <div class="sobh prayer"></div>
                        <div class="dohr prayer"></div>
                        <div class="asr prayer"></div>
                        <div class="maghrib prayer"></div>
                        <div class="ichaa prayer"></div>
                    </div>

                    <div class="prayer-wait">
                        <div class="wait _0"></div>
                        <div class="wait _1"></div>
                        <div class="wait _2"></div>
                        <div class="wait _3"></div>
                        <div class="wait _4"></div>
                    </div>
                </div>

                <div class="footer">
                    <div class="col-lg-12">
                        <div class="site ar">{{site|raw}}</div>
                        <div class="assosciation">
                            {{ mosque.associationName }}
                            {% if mosque.phone %}
                                &nbsp;<i class="glyphicon glyphicon-phone"></i> {{ mosque.phone }}
                            {% endif %}
                            &nbsp;&nbsp;{{ mosque.rib }}
                        </div>
                        <div class="support">
                            <span>{{'developed_by'|trans}}</span> 
                            &nbsp;&nbsp;<i class="glyphicon glyphicon-phone"></i> <a href="tel:{{supportTel}}">{{supportTel}}</a>
                            &nbsp;&nbsp;<i class="glyphicon glyphicon-envelope"></i> <a href="mailto:{{supportEmail}}">{{supportEmail}}</a>
                        </div>
                    </div>
                </div>
                <div class="version">v{{version}}</div>
                {% if mosque.configuration.urlQrCodeEnabled %}
                    <div class="qr-code"><img src="https://api.qrserver.com/v1/create-qr-code/?data={{url('mosque', {slug: mosque.slug, _locale: lang})}}&amp;size=100x100" alt=""/></div>
                    {% endif %}
            </div>
        </div>

        <div class="mobile hidden-lg">
            <div class="spinner"></div>

            <!-- Iqama screen -->
            <div class="iqama ar hidden">
                <div class="top">{{'iqama'|trans}}</div>
                <div class="image"></div>
            </div>

            <div class="main display-none">
                <div class="header ar">{{mosque.name ~ (mosque.city not in mosque.name ?  ' - ' ~ mosque.city : '') }}</div> 
                <div class="top-content">
                    <div class="time"></div>
                    <div class="hijriDate ar"></div>
                    <div class="gregorianDate"></div>
                </div>

                <div class="prayer-content">
                    {% if lang == 'ar' %}
                        <div class="row">
                            <div class="col-xs-4 wait _0 text-left"></div>
                            <div class="col-xs-4 prayer prayer0 sobh"></div> 
                            <div class="col-xs-4 adhan0 hidden">
                                <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}" class="athan-img">
                            </div>
                            <div class="col-xs-4 text ar text-right">{{'fajr'|trans}}</div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 wait _1 text-left"></div>
                            <div class="col-xs-4 prayer prayer1 dohr"></div>
                            <div class="col-xs-4 adhan1 hidden">
                                <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}" class="athan-img">
                            </div>
                            <div class="col-xs-4 text ar text-right">{{'zuhr'|trans}}</div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 wait _2 text-left"></div>
                            <div class="col-xs-4 prayer prayer2 asr"></div>
                            <div class="col-xs-4 adhan2 hidden">
                                <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}" class="athan-img">
                            </div>
                            <div class="col-xs-4 text ar text-right">{{'asr'|trans}}</div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 wait _3 text-left"></div>
                            <div class="col-xs-4 prayer prayer3 maghrib"></div>
                            <div class="col-xs-4 adhan3 hidden">
                                <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}" class="athan-img">
                            </div>
                            <div class="col-xs-4 text ar text-right">{{'maghrib'|trans}}</div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 wait _4 text-left"></div>
                            <div class="col-xs-4 prayer prayer4 ichaa"></div>
                            <div class="col-xs-4 adhan4 hidden">
                                <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}" class="athan-img">
                            </div>
                            <div class="col-xs-4 text ar text-right">{{'isha'|trans}}</div>
                        </div>
                    {% else %}
                        <div class="row">
                            <div class="col-xs-4 text text-left">{{'fajr'|trans}}</div>
                            <div class="col-xs-4 prayer prayer0 sobh"></div> 
                            <div class="col-xs-4 adhan0 hidden">
                                <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}" class="athan-img">
                            </div>
                            <div class="col-xs-4 wait _0 text-right"></div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 text text-left">{{'zuhr'|trans}}</div>
                            <div class="col-xs-4 prayer prayer1 dohr"></div>
                            <div class="col-xs-4 adhan1 hidden">
                                <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}" class="athan-img">
                            </div>
                            <div class="col-xs-4 wait _1 text-right"></div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 text text-left">{{'asr'|trans}}</div>
                            <div class="col-xs-4 prayer prayer2 asr"></div>
                            <div class="col-xs-4 adhan2 hidden">
                                <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}" class="athan-img">
                            </div>
                            <div class="col-xs-4 wait _2 text-right"></div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 text text-left">{{'maghrib'|trans}}</div>
                            <div class="col-xs-4 prayer prayer3 maghrib"></div>
                            <div class="col-xs-4 adhan3 hidden">
                                <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}" class="athan-img">
                            </div>
                            <div class="col-xs-4 wait _3 text-right"></div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 text text-left">{{'isha'|trans}}</div>
                            <div class="col-xs-4 prayer prayer4 ichaa"></div>
                            <div class="col-xs-4 adhan4 hidden">
                                <img src="{{asset('bundles/app/prayer-times/img/loudspeaker.png')}}" class="athan-img">
                            </div>
                            <div class="col-xs-4 wait _4 text-right"></div>
                        </div>
                    {% endif %}
                </div>

                <div class="chourouk-joumouaa">
                    <div class="row">
                        <div class="col-xs-4 col-xs-offset-1 imsak custom-time ar">{{'imsak'|trans}}</div> 
                        <div class="col-xs-4 col-xs-offset-1 chourouk custom-time ar">{{'shuruk'|trans}}</div> 
                        <div class="col-xs-4 col-xs-offset-1 aid custom-time ar">{{'aid'|trans}}</div> 
                        <div class="col-xs-2"></div>
                        <div class="col-xs-4 joumouaa ar">{{'jumua'|trans}}</div>
                        <div class="col-xs-1"></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4 col-xs-offset-1 imsak custom-time imsak-id"></div>
                        <div class="col-xs-4 col-xs-offset-1 chourouk custom-time chourouk-id "></div>
                        <div class="col-xs-4 col-xs-offset-1 aid custom-time aid-id"></div>
                        <div class="col-xs-2"></div>
                        <div class="col-xs-4 prayer joumouaa-id"></div>
                        <div class="col-xs-1"></div>
                    </div>
                </div>

                <div class="footer">
                    <div class="assosciation text-center">
                        {{ mosque.associationName }}
                        {% if mosque.phone %}
                            &nbsp;<i class="glyphicon glyphicon-phone"></i> {{ mosque.phone }}
                        {% endif %}
                        <div>{{ mosque.rib }}</div>
                    </div>
                    <div class="support">
                        <span>{{'developed_by'|trans}}</span><br>
                        <i class="glyphicon glyphicon-phone"></i> <a href="tel:{{supportTel}}">{{supportTel}}</a>
                        <i class="glyphicon glyphicon-envelope"></i> <a href="mailto:{{supportEmail}}" class="supportEmail">{{supportEmail}}</a>
                    </div>
                    <div class="version text-right">v{{version}}</div>
                </div>
            </div>
        </div>

        <script>
            var confData
            = {{config|raw}};
                    var lang = "{{lang}}";
        </script>

        {% javascripts
                '@AppBundle/Resources/public/jquery/js/jquery-1.12.4.min.js'
                '@AppBundle/Resources/public/bootstrap-3.3.7/js/bootstrap.min.js'
                '@AppBundle/Resources/public/prayer-times/js/vendor/jquery.countdown.min.js'
                '@AppBundle/Resources/public/prayer-times/js/vendor/hijriDate.js'
                '@AppBundle/Resources/public/prayer-times/js/vendor/PrayTimes.js'
                '@AppBundle/Resources/public/prayer-times/js/tools.js'
                '@AppBundle/Resources/public/prayer-times/js/date.js'
                '@AppBundle/Resources/public/prayer-times/js/prayer.js'
                '@AppBundle/Resources/public/prayer-times/js/sliders.js'
                '@AppBundle/Resources/public/prayer-times/js/randomHadith.js'
        %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}    
    </body>
</html>